<h1>Add new product</h1>
<%= form_for @product, url: {action: "create"} do |f| %>

<% if @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this post from being saved:</h2>

    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <strong>Product title</strong><br>
  <%= f.text_field :title %><br />
  <%= f.select :category_id  , Category.all.collect {|p| [ p.title, p.id ]}, :prompt => 'Choose a product category'%> <br>
  <strong>Price</strong><br>
  <%= f.text_field :price %><br>
  <strong>Product description</strong><br>
  <%= f.text_area :description, size: "60x12" %><br />
  <strong>Choose a producer Country</strong>
  <%= f.select :country_id  , Country.all.collect {|p| [ p.title, p.id ]}, :prompt => 'Choose a Country'%> <br>
  <strong>Product producer</strong> <br>
  <%= f.text_field :producer %><br />
  <strong>Add photos</strong><br>
  <%= f.file_field :photos, multiple: true %><br><br>
  <%= f.submit "Create" %>
<% end %>
